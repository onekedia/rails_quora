<p id="notice"><%= notice %></p>

<h1>Question Topics</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Topic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @question_topics.each do |question_topic| %>
      <tr>
        <td><%= question_topic.question_id %></td>
        <td><%= question_topic.topic_id %></td>
        <td><%= link_to 'Show', question_topic %></td>
        <td><%= link_to 'Edit', edit_question_topic_path(question_topic) %></td>
        <td><%= link_to 'Destroy', question_topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Question Topic', new_question_topic_path %>
